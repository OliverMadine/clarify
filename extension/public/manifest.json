{
    "name": "clarify-this",
    "description": "Making the Web accessible for everyone",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab", "storage", "tabs", "scripting"
      ],
      "host_permissions": [
        "http://clarify-this.com/*",
        "http://localhost:3000/*"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "Open the popup"
    },
    "devtools_page": "../index.html",
    "externally_connectable": {
        "matches": ["http://clarify-this.com/", "https://clarify-this.herokuapp.com/",
            "https://clarify-this-staging.herokuapp.com/", "http://localhost:3000/"]
    },
    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [ 
      { 
        "matches": [ "<all_urls>" ], 
        "js": [ "content.js" ], 
        "run_at": "document_start" 
      } 
    ] 
}
