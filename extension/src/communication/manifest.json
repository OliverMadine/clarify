{
    "name": "clarify-this",
    "description": "Making the web accessible for everyone",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab", "storage", "tabs", "scripting", "http://*/*", "https://*/*", "<all_urls>"
      ],
      "host_permissions": [
        "http://clarify-this.com*",
        "http://localhost:4001"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "Clarify"
    },
    "icons": {
        "16": "logo192.png",
        "48": "logo192.png",
        "128": "logo192.png"
    },
    "externally_connectable": {
      "matches": ["http://clarify-this.com/", "https://clarify-this.herokuapp.com/",
        "https://clarify-this-staging.herokuapp.com/", "http://localhost:4001/"]
    },
    "background": {
        "service_worker": "background.tsx"
    }
}
