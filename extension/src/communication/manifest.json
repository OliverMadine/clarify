{
    "name": "Claraify",
    "description": "Making the Web accessible for everyone",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab", "storage", "tabs", "scripting", "http://*/*", "https://*/*", "<all_urls>"
      ],
      "host_permissions": [
        "http://claraify.com*",
        "http://localhost:300*"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "Open the popup"
    },
    "icons": {
        "16": "logo192.png",
        "48": "logo192.png",
        "128": "logo192.png"
    },
    "devtools_page": "../index.html",
    "externally_connectable": {
        "matches": ["http://claraify.com/", "http://localhost:3001/"]
    },
    "background": {
        "service_worker": "background.tsx"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'", 

    "content_scripts": [ 
      { 
        "matches": [ "http://*", "https://*" ], 
        "js": [ "content.tsx" ], 
        "run_at": "document_start" 
      } 
    ] 
}
